{
  "parser": {
    "\\.php$": "@markuplint/php-parser"
  },
  "extends": [
    "markuplint:recommended"
  ],
  "rules": {},
  "overrides": {
    "./**/*.php": {
      "rules": {
        "required-h1": false,
        "character-reference": false,
        "permitted-contents": false
      },
      "nodeRules": [
        {
          "selector": "html",
          "rules": {
            "invalid-attr": false,
            "required-attr": false
          }
        },
        {
          "selector": "head",
          "rules": {
            "required-element": false
          }
        }
      ]
    }
  }
}
